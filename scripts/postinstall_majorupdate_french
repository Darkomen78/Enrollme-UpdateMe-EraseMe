#!/bin/bash

ITFOLDER="/Users/Shared/IT"
USRSHORTNAME="$(ls -la /dev/console | awk '{print $3}')"

cp $ITFOLDER/update/com.github.ygini.Hello-IT.MajorUpdate_french.plist /Users/$USRSHORTNAME/Library/Preferences/com.github.ygini.Hello-IT.MajorUpdate.plist
killall "Hello IT"
sleep 5
open "/Applications/Utilities/Hello IT.app"
exit 0
